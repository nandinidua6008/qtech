
<body class="wow fadeIn">
  
  
  <!-- outer container -->
  <div class="page-content">
    <div class="container">
      <!-- heading section start -->  
      <div class="site-heading">
        <h1 class="wow fadeInDown">New User?</h1>
      </div>
      <!-- heading section end -->  
      
      <!-- form section start --> 
      <div class="form-section wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.8s">
        <h2 class="form-heading wow pulse" data-wow-delay="1.8s">Register Now</h2>
        <div class="register-form">
          <div class="row">
            <div class="col-sm-6"> 
              <div class="col-left">
                <form method="post" action="/create_registration">
                  <div class="form-group">
                    <label class="inp-label">Email<span class="required"> * </span></label>
                    <input type="email" class="form-control inp-field" name="user[email]" placeholder="Enter Email.." required="required">
                  </div>
                  <div class="form-group">
                    <label class="inp-label">First_name<span class="required"> * </span></label>
                    <input type="text" name="user[firstname]" class="form-control inp-field" placeholder="Enter First Name.." required="required">
                  </div>
                  <div class="form-group">
                    <label class="inp-label">Last Name<span class="required"> * </span></label>
                    <input type="text" name="user[lastname]" class="form-control inp-field"  placeholder="Enter Last Name.." required="required">
                  </div>  
                  <div class="form-group">
                    <label class="inp-label">Date of Birth <span class="required"> * </span></label>
                    <input type="text" name="user[DOB]" id="datepicker" class="form-control date inp-field"  placeholder="MM/DD/YYYY" required="required">
                  </div>  
                  <div class="form-group">
                    <label class="inp-label">Gender <span class="required"> * </span></label>
                    <label class="radio-inline"><input type="radio" name="user[gender]" checked>Male</label>
                    <label class="radio-inline"><input type="radio" name="user[gender]">Female</label>
                  </div>
                  <div class="form-group">
                    <label class="inp-label">Contact Number <span class="required"> * </span></label>
                    <input type="text" name="user[phone_number]" class="form-control inp-field" placeholder="Enter Number.." required="required">
                  </div>
                  <div class="form-group">
                    <label class="inp-label">Password<span class="required"> * </span></label>
                    <input type="password" name="user[password]" class="form-control inp-field"  placeholder="Enter Password.." required="required">
                  </div>
                  <div class="form-group">
                    <label class="inp-label">Confirm Password<span class="required"> * </span></label>
                    <input type="password" name="user[rpassword]" class="form-control inp-field"  placeholder="Retype Password.." required="required">
                    
                  </div>
                  <div class="form-btn">
                    <button type="submit" class="btn submit-btn">Submit</button>
                    <button type="reset" class="btn reset-btn">Reset</button>
                  </div>
                </form>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="col-right">
                <div class="col-heading">
                  <h3>Get Ready!</h3>
                  <p>Lorem ipsum dolor consectetur, sed do eiusmod sed do eiusmod vitae elementum lacus
                   massa sit amet metus...</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- form section end --> 
    </div>
  </div>  
  
    
    <script src="js/index.js"></script> 
    <script src="js/wow.js"></script>
     <script>
          $( function() {
            $( "#datepicker" ).datepicker();
          } );
    </script>
    <script>
        new WOW().init();
    </script> 
</body>

